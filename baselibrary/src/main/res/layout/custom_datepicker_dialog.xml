<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_70"
        android:background="@color/bg_eeeeee"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/tc_888888"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/tc_888888"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/dp_10"
            android:text="确定"
            android:textColor="@color/tc_47aefe"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <com.htjy.baselibrary.widget.datePicker.CustomDateWeekPicker
        android:id="@+id/cdp"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_gravity="center" />

</LinearLayout>